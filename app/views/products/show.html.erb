<div class="center row">
  <div class="small-12 large-12 columns">
    <fieldset>
      <div class="center row">
        <div class="small-1 large-1 columns">&nbsp;
        </div>
        <div class="small-7 large-7 columns">
          <br><br>
          <h21>Current Product</h21>
          <br>
          <br>
        </div>
        <div class="small-4 large-4 columns">
          <br><br><%= button_to 'Back to Products', products_path, method: "get", class: "button large radius" %>
        </div>
      </div>
      <div class="center row">
        <div class="small-1 large-1 columns">&nbsp;
        </div>
        <div class="small-10 large-10 columns">
          <div class="center row">
            <div class="small-12 large-12 columns">
              <fieldset>
                <div class="center row">
                  <div class="small-3 large-3 columns">
                  </div>
                  <div class="small-9 large-9 columns">
                    <left><p id="notice"><%= notice %></p></left>
                  </div>
                </div>
                <div class="row">
                  <div class="small-3 large-3 columns">
                    <right><strong>Title:</strong></right><br>
                  </div>
                  <div class="small-9 large-9 columns">
                    <left><%= @product.title %></left>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="small-3 large-3 columns">
                    <right><strong>Description:</strong></right><br>
                  </div>
                  <div class="small-9 large-9 columns">
                    <left><%= @product.description %></left>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="small-3 large-3 columns">
                    <right><strong>Image url:</strong></right><br>
                  </div>
                  <div class="small-9 large-9 columns">
                    <left><%= @product.image_url %></left>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="small-3 large-3 columns">
                    <right><strong>Price:</strong></right><br>
                  </div>
                  <div class="small-9 large-9 columns">
                    <left><%= @product.price %></left>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        </div>
        <div class="small-1 large-1 columns">
        </div>
      </div> 
    </fieldset>
  </div>
</div>